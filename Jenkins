pipeline {
    agent any

    environment {
        PROJECT_ID = 'teja-gcp99'
        CLUSTER_NAME = 'cluster-1'
        LOCATION = 'us-central1-c'
        CREDENTIALS_ID = 'gke'
    }

    stages {
        stage("Checkout code") {
            steps {
                checkout scm
            }
        }

        stage("Build and Push image") {
            steps {
                script {
                    // Define the Docker image name
                    def imageName = "afroz2022/hello:${env.BUILD_ID}"

                    // Build the Docker image
                    docker.build(imageName).push()

                    // Push the image with a specific tag
                    docker.withRegistry('https://registry.hub.docker.com', 'afroz2022') {
                        docker.image(imageName).push("latest")
                    }
                }
            }
        }

        stage('Deploy to GKE') {
            steps {
                sh "sed -i 's/hello:latest/hello:${env.BUILD_ID}/g' deployment.yaml"
                
                // Deploy to Google Kubernetes Engine (GKE)
                step([$class: 'KubernetesEngineBuilder',
                    projectId: env.PROJECT_ID,
                    clusterName: env.CLUSTER_NAME,
                    location: env.LOCATION,
                    credentialsId: env.CREDENTIALS_ID,
                    containerName: 'hello-container', // Specify your container name
                    image: "afroz2022/hello:${env.BUILD_ID}",
                    replicas: 3 // Specify the number of replicas you want
                ])
            }
        }
    }
}
